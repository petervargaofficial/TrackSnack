<table class = "table table-bordered table-hover table-condensed">
    <tr>
      <th>Time of Order</th>
      <th>Customer</th>
      <th>Confirmed</th>
      <th>Manage</th>
    </tr>
  <% @orders.each do |order| %>
    <% if order.customer_confirmed %>
    <tr>
      <td>
        <%= order.created_at.to_time.in_time_zone('Pacific Time (US & Canada)').hour %>:<%= order.created_at.to_time.in_time_zone('Pacific Time (US & Canada)').min %>
      </td>
      <td><%= order.user.name %></td>
      <td>
        <% if order.vendor_confirmed %>
          YES
        <% else %>
          NO
        <% end %>
      </td>
      <td>
        <%= link_to("confirm", "/vendor_todos/edit?order_id=#{order.id}") %>
      </td>
    </tr>
    <% end %>  
  <% end %>
</table>